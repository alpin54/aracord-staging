//-------------------------------------------------------------------------------
  @name: Report Card
  -------------------------------------------------------------------------------//

='\n\n'
//.report-card
.report-card(class=(data.img == undefined ? 'report-card--annual' : ''))
  .report-card__box
    if data.img
      .report-card__img
        ='\n'
        img.report-card__img__el(src=data.img alt=data.title)/
        ='\n'
    .report-card__text
      h6.report-card__title= data.title
      .report-card__btn
        ='\n'
        a.btn-text.btn-text--sm.btn-text--w(href=data.btn.to target='__blank')= data.btn.text
        ='\n'
        a.btn-icon.btn-icon--w(href='https://example-files.online-convert.com/document/pdf/example.pdf' target='__blank' download)
          ='\n'
          i(class='fi fi-cloud-arrow-down')
          ='\n'
      .report-card__icon
        ='\n'
        i(class='fi fi-'+data.icon)
        ='\n'
    ='\n'
    a.report-card__link(href=data.btn.to)= data.btn.text
    ='\n'
