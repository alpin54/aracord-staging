//-------------------------------------------------------------------------------
  @name: About Popup
  -------------------------------------------------------------------------------//

='\n\n'
//.about-popup
.about-popup
  ='\n'
  button.about-popup__close.js-hide-popup-management(type='button')
    ='\n'
    i.fi.fi-close
    ='\n'
  .container
    .about-popup__inner
      .about-popup__left
        .about-popup__head
          h2.about-popup__name= data.name
          .about-popup__head-wrap
            h3.about-popup__position= data.position
            .about-popup__img
              ='\n'
              img.about-popup__img__el(src=data.img alt=data.name)/
      .about-popup__right
        .about-popup__body
          | !{data.content}
