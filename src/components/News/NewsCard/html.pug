='\n\n'
//.news-card
.news-card
  .news-card__box
    ='\n'
    a.news-card__link(href=data.btn.to)= data.btn.text
    ='\n'
    .news-card__img
      ='\n'
      img.news-card__img__el(src=data.img alt=data.title)/
      ='\n'
    .news-card__text
      p.news-card__label= data.label
      h4.news-card__title= data.title
      ='\n'
      a.btn-text.btn-text--w(href=data.btn.to)= data.btn.text
      ='\n'
